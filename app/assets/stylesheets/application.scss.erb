html, body{
  h1, h2, h3, h4, h5, h6, p{
    font-family: "Times New Roman"
  }
  width: 100%;
  height: 100%;
  margin: 0px;
  padding: 0px;
  overflow-x: hidden;
}

@mixin bg-img($img-url){
  background-size: cover;
  background-image: $img-url;
  background-repeat: no-repeat;
  background-attachment: fixed;
}
.beach-bg{
  height: 45%;
  width: 100%;
  @include  bg-img(url(<%= image_path "beach.jpg" %>));
}

.logo-img{
  height: 7.5em;
  width: 7.5em;
}
